                            <input type="text" class="form-control" id="projectName" name="projectName" >
                        </div>
                    </div> <!-- End of Input -->
                    
                    <div class="form-group pull-right">
                        <input type="button" class="btn btn-primary" id="submitNewScreen" value="Submit">
